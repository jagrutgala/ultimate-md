{
  "name": "ultimate-md",
  "displayName": "ultimate-md",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "markdown",
        "aliases": [
          "markdown", "md"
        ],
        "extensions": [
          ".md"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "ultimate-md.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "ultimate-md.toggleHeader1",
        "title": "Toggle Header 1"
      },
      {
        "command": "ultimate-md.toggleHeader2",
        "title": "Toggle Header 2"
      },
      {
        "command": "ultimate-md.toggleHeader3",
        "title": "Toggle Header 3"
      },
      {
        "command": "ultimate-md.toggleHeader4",
        "title": "Toggle Header 4"
      },
      {
        "command": "ultimate-md.toggleHeader5",
        "title": "Toggle Header 5"
      },
      {
        "command": "ultimate-md.toggleHeader6",
        "title": "Toggle Header 6"
      },
      {
        "command": "ultimate-md.toggleBold",
        "title": "Toggle Bold"
      }
    ],
    "keybindings": [
      {
      "key": "alt+m 1",
      "command": "ultimate-md.toggleHeader1",
      "when": "editorLangId == 'markdown'"
      },
      {
      "key": "alt+m 2",
      "command": "ultimate-md.toggleHeader2",
      "when": "editorLangId == 'markdown'"
      },
      {
      "key": "alt+m 3",
      "command": "ultimate-md.toggleHeader3",
      "when": "editorLangId == 'markdown'"
      },
      {
      "key": "alt+m 4",
      "command": "ultimate-md.toggleHeader4",
      "when": "editorLangId == 'markdown'"
      },
      {
      "key": "alt+m 5",
      "command": "ultimate-md.toggleHeader5",
      "when": "editorLangId == 'markdown'"
      },
      {
      "key": "alt+m 6",
      "command": "ultimate-md.toggleHeader6",
      "when": "editorLangId == 'markdown'"
      },
      {
      "key": "alt+m b",
      "command": "ultimate-md.toggleBold",
      "when": "editorLangId == 'markdown'"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.82.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4"
  }
}
